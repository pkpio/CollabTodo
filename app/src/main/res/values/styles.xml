<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/md_yellow_700</item>

        <!-- Support library compatibility -->
        <item name="background">@color/md_yellow_700</item>
    </style>

    <!-- Material widget styles -->
    <style name="ListAddButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">#FF2196F3</item>
        <item name="fab_elevation">4dp</item>
        <item name="fab_iconSize">35dp</item>
        <item name="fab_iconSrc">@drawable/ic_list_add_white</item>
        <item name="rd_delayClick">true</item>
    </style>

    <style name="AddButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#33000000</item>
        <item name="fab_backgroundColor">@color/md_yellow_600</item>
        <item name="fab_elevation">4dp</item>
        <item name="fab_iconSize">35dp</item>
        <item name="fab_iconSrc">@drawable/ic_add_white</item>
        <item name="rd_delayClick">true</item>
    </style>

    <style name="CheckBoxDrawable" parent="Material.Drawable.CheckBox" />

    <style name="FlatButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

</resources>
